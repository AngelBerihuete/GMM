\begin_layout Section*
Variational Inference
\end_layout

\begin_layout Standard
Variational inference optimizes 
\begin_inset Formula $q(\theta|\Theta)$
\end_inset

 so that,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
argmin_{q(\theta|\Theta)}\;KL(q(\theta|\Theta),\,p(\theta|X;\Omega)\,\equiv & argmax_{q(\theta|\Theta)}\;ELBO(p(X,\theta;\Omega),\,q(\theta|\Theta))
\end{align*}

\end_inset


\begin_inset Newline newline
\end_inset

where the Evidence Lower BOund is defined as;
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
ELBO(p(X,\theta;\Omega),\,q(\theta|\Theta))= & \int q(\theta|\Theta)\log p(X,\theta;\Omega)d\theta-\int q(\theta|\Theta)\log q(\theta|\Theta)d\theta\\
= & \mathbb{E}_{q(\theta|\Theta)}[\log p(X,\theta;\Omega)]+\mathbb{H}[q(\theta|\Theta)]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and where:
\end_layout

\begin_layout Section*
\begin_inset Formula 
\begin{align*}
\theta= & \{\pi,z,\mu\}\\
\Omega= & \{\alpha,m_{o}\}\\
X= & \{X\}\\
\Theta= & \{\lambda_{\pi},\lambda_{\mu},\phi\}
\end{align*}

\end_inset


\begin_inset Newline newline
\end_inset

Joint Distribution
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})= & p(\pi|\alpha)\prod_{k=1}^{K}p(\mu_{k}|\,m_{o},\,(\beta_{o}\Delta_{o})^{-1})\prod_{n=1}^{N}p(z_{n}|\pi)p(x_{n}|\mu_{z_{n}},\,\Delta_{o}^{-1})
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Mean-field Distribution
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
q(\pi,\,z,\,\mu\,|\lambda_{\pi},\,\phi,\,\lambda_{\mu})= & q(\pi|\lambda_{\pi})\prod_{n=1}^{N}q(z_{n}|\phi_{n})\prod_{k=1}^{K}q(\mu_{k}|\lambda_{\mu_{k}})
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Coordinate Ascent
\end_layout

\begin_layout Standard
Under the mean-field assumption, the variational distributions for each
 variable can be computed as follows:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
q(\pi|\lambda_{\pi}) & \propto\exp(\mathbb{E}_{q(z_{n}|\phi_{n})q(\mu|\lambda_{\mu})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})])\\
q(z_{n}|\phi_{n}) & \propto\exp(\mathbb{E}_{q(\pi|\lambda_{\pi})q(\mu|\lambda_{\mu})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})])\\
q(\mu_{k}|\lambda_{\mu_{k}}) & \propto\exp(\mathbb{\mathbb{E}}_{q(\pi|\lambda_{\pi})q(z_{n}|\phi_{n})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})])
\end{align*}

\end_inset


\begin_inset Newline newline
\end_inset

The mixture proportions:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
q(\pi|\lambda_{\pi}) & \propto\exp\left(\mathbb{E}_{q(z_{n}|\phi_{n})q(\mu|\lambda_{\mu})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})]\right)\\
 & \propto\exp\left(\log p(\pi|\alpha)+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}[\log p(z_{n}|\pi)]\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}(\alpha_{k}-1)\log\pi_{k}+\sum_{n=1}^{N}\sum_{k=1}^{K}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\log\pi_{k}\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\left(\alpha_{k}-1+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)\log\pi_{k}\right)\\
q(\pi|\lambda_{\pi})= & Dir\left(\alpha_{k}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)
\end{align*}

\end_inset

The mixture assignments:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
q(z_{n}|\phi_{n}) & \propto\exp\left(\mathbb{E}_{q(\pi|\lambda_{\pi})q(\mu|\lambda_{\mu})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})]\right)\\
 & \propto\exp\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log p(z_{n}|\pi)]+\mathbb{E}_{q(\mu|\lambda_{\mu})}[\log p(x_{n}|\mu_{z_{n}},\,\Delta_{o}^{-1})]\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]+\mathbb{I}(z_{n}=k)\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\log p(x_{n}|\mu_{k},\,\Delta_{o}^{-1})]\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]+\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[-\frac{\text{1}}{2}(x_{n}-\mu_{k})^{T}\Delta_{o}(x_{n}-u_{k})]\right)\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]+\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[-\frac{\text{1}}{2}Tr\left(\Delta_{o}(x_{n}-\mu_{k})^{T}(x_{n}-u_{k})\right)]\right)\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]-\frac{\text{1}}{2}Tr(\Delta_{o}\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[(x_{n}-\mu_{k})^{T}(x_{n}-u_{k})])\right)\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]-\frac{\text{1}}{2}Tr\left(\Delta_{o}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])^{T}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])\right.\right.\right.\\
 & \left.\left.\left.+\Delta_{o}\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)^{-1}\Delta_{o}^{-1}\right)\right)\right)\\
 & \propto\exp\left(\sum_{k=1}^{K}\mathbb{I}(z_{n}=k)\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]-\frac{\text{1}}{2}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])^{T}\Delta_{o}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])\right.\right.\\
 & \left.\left.-\frac{\text{1}}{2}D\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)^{-1}\right)\right)\\
q(z_{n}|\phi_{n}) & =Cat\left(\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]-\frac{\text{1}}{2}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])^{T}\Delta_{o}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])\right.\\
 & \left.-\frac{\text{1}}{2}D\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)^{-1}\right)\\
\\
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The mixture means:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
q(\mu_{k}|\lambda_{\mu_{k}}) & \propto\exp\left(\mathbb{\mathbb{E}}_{q(\pi|\lambda_{\pi})q(z_{n}|\phi_{n})}[\log p(x,\,z,\,\mu\,|\,\alpha,\,m_{o},W_{o},\Delta_{o})]\right)\\
 & \propto\exp\left(\log p(\mu_{k}|\,m_{o},\,(\beta_{o}\Delta_{o})^{-1})+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\log p(x_{n}|\mu_{k},\,\Delta_{o}^{-1})\right)\\
 & \propto\exp\left(-\frac{\text{1}}{2}\mu_{k}{}^{T}\beta_{o}\Delta_{o}u_{k}-\frac{\text{1}}{2}\mu_{k}{}^{T}\beta_{o}\Delta_{o}m_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)(-\frac{\text{1}}{2}\mu_{k}{}^{T}\Delta_{o}u_{k}-\frac{\text{1}}{2}x_{n}{}^{T}\Delta_{o}u_{k})\right)\\
 & \propto\exp\left(-\frac{\text{1}}{2}\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)\mu_{k}{}^{T}\Delta_{o}\mu_{k}-\frac{\text{1}}{2}\mu_{k}{}^{T}\Delta_{o}\left(\beta_{o}m_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)x_{n}^{T}\right)\right)\\
q(\mu_{k}|\lambda_{\mu_{k}}) & =N\left(\frac{\left(\beta_{o}m_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)x_{n}^{T}\right)}{\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)},\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)^{-1}\Delta_{o}^{-1}\right)\\
\\
\\
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The above expectactions based on the functional forms of q's
\begin_inset Formula 
\begin{align*}
\mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]= & \Psi\left(\alpha_{k}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)-\Psi\left(\sum_{k=1}^{K}\alpha_{k}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)\\
\mathbb{E}_{q(z_{n}|\phi_{n})}[\mathbb{I}(z_{n}=k)]= & \mathbb{E}_{q(\pi|\lambda_{\pi})}[\log\pi_{k}]-\frac{\text{1}}{2}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])^{T}\Delta_{o}(x_{n}-\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}])-\frac{\text{1}}{2}D(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k))^{-1}\\
\mathbb{E}_{q(\mu|\lambda_{\mu_{k}})}[\mu_{k}]= & \frac{\left(\beta_{o}m_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)x_{n}^{T}\right)}{\left(\beta_{o}+\sum_{n=1}^{N}\mathbb{E}_{q(z_{n}|\phi_{n})}\mathbb{I}(z_{n}=k)\right)}\\
\\
\end{align*}

\end_inset


